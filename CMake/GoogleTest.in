cmake_minimum_required(VERSION 2.8.2)

project(googletest-download NONE)

include(ExternalProject)
if(WIN32)
message(STATUS "WINDOWS..............")
  ExternalProject_Add(googletest
    GIT_REPOSITORY    https://github.com/google/googletest.git
    GIT_TAG           master
    SOURCE_DIR        "${CMAKE_BINARY_DIR}/googletest-src"
    BINARY_DIR        "${CMAKE_BINARY_DIR}/googletest-build"
    INSTALL_COMMAND   "${CMAKE_COMMAND}" -E make_directory ${CMAKE_BINARY_DIR}/googletest/include/gtest
    COMMAND "${CMAKE_COMMAND}" -E make_directory ${CMAKE_BINARY_DIR}/googletest/lib
    COMMAND "${CMAKE_COMMAND}" -E copy_directory ${CMAKE_BINARY_DIR}/googletest-src/googletest/include/gtest ${CMAKE_BINARY_DIR}/googletest/include/gtest
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gmock_maind.lib ${CMAKE_BINARY_DIR}/googletest/lib/gmock_main.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gmockd.lib ${CMAKE_BINARY_DIR}/googletest/lib/gmock.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gtest_maind.lib ${CMAKE_BINARY_DIR}/googletest/lib/gtest_main.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gtestd.lib ${CMAKE_BINARY_DIR}/googletest/lib/gtest.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gmock_maind.lib ${CMAKE_BINARY_DIR}/googletest/lib/gmock_maind.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gmockd.lib ${CMAKE_BINARY_DIR}/googletest/lib/gmockd.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gtest_maind.lib ${CMAKE_BINARY_DIR}/googletest/lib/gtest_maind.lib
    COMMAND "${CMAKE_COMMAND}" -E copy ${CMAKE_BINARY_DIR}/googletest-build/lib/Debug/gtestd.lib ${CMAKE_BINARY_DIR}/googletest/lib/gtestd.lib
    TEST_COMMAND      ""
)
else()
  ExternalProject_Add(googletest
    GIT_REPOSITORY    https://github.com/google/googletest.git
    GIT_TAG           master
    SOURCE_DIR        "${CMAKE_BINARY_DIR}/googletest-src"
    BINARY_DIR        "${CMAKE_BINARY_DIR}/googletest-build"
    INSTALL_COMMAND   mkdir -p ${CMAKE_BINARY_DIR}/googletest/include
    COMMAND mkdir -p ${CMAKE_BINARY_DIR}/googletest/lib
    COMMAND cp -a ${CMAKE_BINARY_DIR}/googletest-src/googletest/include/gtest ${CMAKE_BINARY_DIR}/googletest/include
    COMMAND cp -a ${CMAKE_BINARY_DIR}/googletest-build/lib/libgtest_main.a ${CMAKE_BINARY_DIR}/googletest-build/lib/libgtest.a ${CMAKE_BINARY_DIR}/googletest/lib/
    TEST_COMMAND      ""
)
endif()
